<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#062150"
    tools:context="FunctionsInM.ChoosingNoise">
    <ImageView
        android:layout_marginTop="60dp"
        android:layout_width="270dp"
        android:layout_height="180dp"
        android:src="@drawable/loginimg"
        ></ImageView>
<LinearLayout
    android:padding="20dp"
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/liniarlayout_in_login"

    android:layout_marginHorizontal="40dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginVertical="20dp"
        android:text="β波白噪音"
        android:textSize="15sp"
        android:id="@+id/voice1"
        ></Button>
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginVertical="20dp"
        android:text="浅草溪流潺"
        android:textSize="15sp"
        android:id="@+id/voice2"
        ></Button>
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginVertical="20dp"
        android:text="海滩篝火"
        android:textSize="15sp"
        android:id="@+id/voice3"
        ></Button>
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginVertical="20dp"
        android:text="深山竹林听雨声"
        android:textSize="15sp"
        android:id="@+id/voice4"
        ></Button>
</LinearLayout>
    <Button
        android:id="@+id/submitvoice"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/crbg2"
        android:text="选好了"
        android:textSize="18sp"
        android:textColor="@color/white" />
</LinearLayout>