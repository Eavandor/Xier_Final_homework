<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#062150"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingHorizontal="30dp"
    tools:context="Login.CreateAccount">
    <ImageView
        android:layout_marginTop="60dp"
        android:layout_width="270dp"
        android:layout_height="180dp"
        android:src="@drawable/loginimg"></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="30dp"
        android:background="@drawable/liniarlayout_in_login"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:tint="#5b6678"
                android:src="@drawable/mail"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                ></ImageView>
            <EditText
                android:id="@+id/ed235"

                android:layout_height="59dp"
                android:background="@drawable/liniarlayout_in_login"
                android:hint="电子邮箱："

                android:layout_width="320dp"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#838ea0"
            ></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"

            android:padding="0dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:tint="#5b6678"
                android:src="@drawable/ver"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="10dp"
                ></ImageView>
            <EditText
                android:id="@+id/ed556"
                android:layout_height="59dp"
                android:background="@drawable/liniarlayout_in_login"
                android:hint="验证码："

                android:layout_width="115dp"></EditText>


            <Button
                android:id="@+id/vinlogin4"
                android:layout_width="90dp"
                android:layout_height="38dp"
                android:layout_marginVertical="4dp"
                android:layout_marginLeft="0dp"
                android:text="获取验证码"
                android:background="@drawable/verificationbg"
                ></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#838ea0"
            ></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:tint="#5b6678"
                android:src="@drawable/ping"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="10dp"
                ></ImageView>
            <EditText
                android:id="@+id/ed236"
                android:layout_height="59dp"
                android:background="@drawable/liniarlayout_in_login"
                android:hint="请输入密码："

                android:inputType="numberPassword"
                android:layout_width="270dp"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#838ea0"
            ></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:tint="#5b6678"
                android:src="@drawable/ping"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="10dp"
                ></ImageView>
            <EditText
                android:id="@+id/ed237"
                android:layout_height="59dp"
                android:background="@drawable/liniarlayout_in_login"
                android:hint="请确认密码："

                android:inputType="numberPassword"
                android:layout_width="270dp"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#838ea0"
            ></LinearLayout>
